<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1" metadata-complete="false">

	<display-name>MyFirstApp</display-name>
	<description>MyFirstApp</description>

	<servlet>
		<servlet-name>trig</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.ServletTrigonometric</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.ServletImage</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>color</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.ServletColor</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>powers</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.ServletPower</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>trig</servlet-name>
		<url-pattern>/trigonometric</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/reportImage</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>color</servlet-name>
		<url-pattern>/setColor</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>powers</servlet-name>
		<url-pattern>/powers</url-pattern>
	</servlet-mapping>

</web-app>